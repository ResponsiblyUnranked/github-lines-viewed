{
  "manifest_version": 2,
  "name": "GitHub Lines Viewed",
  "version": "0.1.0",

  "description": "Replaces GitHub's 'files viewed' with 'lines viewed' instead.",

  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://github.com/*/*/pull/*/files"],
      "js": ["lines-viewed.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ]
}
